<%= link_to '#',class: "dropdown-item admin-filter-by #{ params[:statuses].present? && params[:statuses].split(',').include?(filter.to_s) ? 'active' : '' }", data: {status: filter } do %>
  <%= filter.to_s.titleize %>
  <% if params[:statuses].present? && params[:statuses].split(',').include?(filter.to_s)%>
    <span class="fa fa-check" aria-hidden="true"></span>
  <% end %>
<% end %>