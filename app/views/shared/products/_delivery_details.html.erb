<div class="row">
    <div class="col-md-12">
        <div class="delivery-detail delivery-details-section box-border yo-white-card">
            <div class="deliver-detail-content d-flex justify-content-between align-items-center flex-wrap mt-4">
                <h4 mt-2>Delivery Details</h4>
                <div class="mt-2">
                    <label class="checkbox-blk product-delivery-option">Enter new delivery options
                        <%=check_box_tag 'add_new', 'delivery_option',false, data: {url: new_delivery_option_url, params: 'from=create_product',remote: true, method: :get } %>
                        <span class="checkmark"></span>
                    </label>
                </div>
            </div>
            
            <% has_error, msg = get_errors(form, :delivery_option) %>
            <div class="d-option-id" style="display:<%= has_error ? 'block' : 'none' %>; margin-bottom: 10px; color: red;">Please select a delivery option</div>

            <% @delivery_options.each do |d_option| %>
            <div class="delivery-option d-flex justify-content-between align-items-center box-border yo-white-card flex-wrap">
                <div class="deliver-option-left d-flex align-items-center">
                    <label class="checkbox-blk radiobox-blk mb-0">
                        <%= form.radio_button :delivery_option_id, d_option.id %>

                        <span class="checkmark checkbox-mrgn"></span>
                        <div class="checkbox-right-text">
                            <p class="mb-0 delivery-detail-bt-title"><%= d_option.name %></p>
                            <span class="red-color ">Details of delivery option</span>
                        </div>
                    </label>
                </div>
                <div class="deliver-option-left bold">
                    <p class="mb-0">
                    <%= d_option.product_count > 1  ? pluralize(d_option.product_count, 'listing') : "#{d_option.product_count} listing"  %>
                    </p>
                </div>
            </div>
            <% end %>

        </div>
    </div>
</div>
