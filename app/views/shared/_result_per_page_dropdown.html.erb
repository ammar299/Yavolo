<div class="dropdown-filter-field dropdown-filter-custom active my-1 ml-2 dropdown-filter-border">
  <div class="dropdown">
    <a href="#" class="btn btn-radius btn-sm px-3 btn-primary my-0 btn-link-dropdown-1 d-inline-flex align-items-center" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Result per page: <%= params[:per_page].present? ? "#{params[:per_page]}" : 15 %>
      <i class="fa fa-angle-down ml-3" aria-hidden="true"></i>
    </a>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 38px, 0px); top: 0px; left: 0px; will-change: transform;">
      <%= link_to ("#{url_path}?per_page=15") do %>
        <i class="<%= 'fa fa-check' if params[:per_page] == '15' %>" aria-hidden="true"></i>
        Results per page: 15
      <% end %>
      <%= link_to ("#{url_path}?per_page=30") do %>
        <i class="<%= 'fa fa-check' if params[:per_page] == '30' %>" aria-hidden="true"></i>
        Results per page: 30
      <% end %>
      <%= link_to ("#{url_path}?per_page=60") do %>
        <i class="<%= 'fa fa-check' if params[:per_page] == '60' %>" aria-hidden="true"></i>
        Results per page: 60
      <% end %>
      <%= link_to ("#{url_path}?per_page=90") do %>
        <i class="<%= 'fa fa-check' if params[:per_page] == '90' %>" aria-hidden="true"></i>
        Results per page: 90
      <% end %>
      <%= link_to ("#{url_path}?per_page=180") do %>
        <i class="<%= 'fa fa-check' if params[:per_page] == '180' %>" aria-hidden="true"></i>
        Results per page: 180
      <% end %>
    </div>
  </div>
</div>
