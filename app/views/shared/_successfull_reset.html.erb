<div class="main-page">
  <div class="main-content admin-login-content">
    <div class="container">
      <div class="row">
        <div class="col col-12 col-lg-6 col-md-8 mx-auto">
          <div class="sign-in admin-login">
            <div class="signin-header d-flex justify-content-center w-100">
              <div class="signin-logo">
                <div class="logo-inner">
                  <%= link_to image_tag('Yavolo_Logo_WarmRed.png'), root_path %>
                  <p class="my-1 super-admin-text pl-5">Super Admin</p>
                </div>
              </div>
            </div>
            <div class="field text-center mt-2">
              <p>Your reset email is on its way!</p>
            </div>
            <div class="actions text-center">
              <%= link_to "Back to login",new_admin_session_path, class: "btn btn-primary btn-lg btn-block general-mrgn mb-3" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
