<%= simple_form_for @seller_api, url: url, remote: true do |form| %>
  <div class="form-group form-group-vertical form-group-vertical-responsive">
    <%= form.label :developer_name, 'Developer Name:' %>
    <%= form.text_field :developer_name, placeholder: 'John Doe', class: 'form-control', required: true %>
  </div>
  <div class="form-group form-group-vertical form-group-vertical-responsive">
    <%= form.label :app_name, 'App Name:' %>
    <%= form.text_field :app_name, placeholder: 'shopify private app', class: 'form-control', required: true %>
  </div>
  <div class="text-center">
    <%= form.submit 'Save', class: "btn btn-radius px-4 btn-primary" %>
  </div>
<% end %>
