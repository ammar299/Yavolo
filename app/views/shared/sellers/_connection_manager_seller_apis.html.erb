<% seller_apis.each do |seller_api| %>
  <tr id="seller-api-<%= seller_api.id %>">
    <td><%= seller_api.developer_name %></td>
    <td id="seller-api-developer-id"><%= seller_api.developer_id %></td>
    <td><%= seller_api.app_name %></td>
    <td id="seller-api-status"><%= action_performed_value(seller_api.status).capitalize %></td>
    <td id="seller-api-expiry-date">
      <%= seller_api.expiry_date ? date_format_US(seller_api.expiry_date) : '' %>
      <span class="ml-2"><%= seller_api.expiry_date ? connection_expiry_time(seller_api.created_at).downcase : '' %></span>
    </td>
    <td id="developer-api-token" class="text-center">
      <a href="javascript:void(0)" class="view-api-token">View</a>
      <span id="api-token" class="help-popup api-token d-none developer-api-token">
        <span class="seller-api-token"><%= seller_api.api_token %></span>
      </span>
      <div class="help-popup-inner">
        <p class="mb-0 help-popup-text" id="help-popup-text">Click to copy</p>
      </div>
    </td>
    <td class="text-center">
      <div id="seller-api-action-btns">
        <%= render 'shared/sellers/connection_manager_actions', seller_api: seller_api %>
      </div>
    </td>
  </tr>
<% end %>
