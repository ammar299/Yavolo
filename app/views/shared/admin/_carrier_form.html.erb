<%= simple_form_for carrier, url: url, data: { remote: true } do |f| %>
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>
  <div class="row mt-4">
    <div class="col-6">
    <%= f.label :api_key, 'API Key' %>
    <%= f.text_field :api_key  %>
    </div>
    <div class="col-6">
    <%= f.label :secret_key, 'Secret Key' %>
    <%= f.text_field :secret_key  %>
    </div>
  </div>
  <%= f.submit %>
<% end %>
