<div class="pricing-quality <%= delivery_form_class(params) %>">
  <%= simple_form_for delivery_option, url: url, data: { remote: true }, html: { id: :delivery_option_form } do |f| %>
    <%= render '/shared/admin/delivery_option_errors', delivery_option: @delivery_option %>
    <div class="form-group form-group-vertical flex-wrap">
      <b><%= f.label :name, 'Delivery Option Name*', class: 'text-left pr-3 w-100' %></b>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <% if params[:controller] == "sellers/delivery_options" %>
      <%= f.hidden_field :delivery_optionable_type, value: "Seller"%>
      <%= f.hidden_field :delivery_optionable_id, value: current_seller.id %>
    <% elsif params[:controller] == "admin/delivery_options" %>
      <%= f.hidden_field :delivery_optionable_type, value: "Admin"%>
      <%= f.hidden_field :delivery_optionable_id, value: current_admin.id %>
    <% end %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group form-group-vertical flex-wrap">
          <b><%= f.label :processing_time, 'Processing time*', class: 'text-left pr-3 w-100' %></b>
          <%= f.select :processing_time, select_processing_time, { prompt: 'How long will each order take to process?' }, class: 'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group form-group-vertical flex-wrap">
          <b><%= f.label :delivery_time, 'Delivery time*', class: 'text-left pr-3 w-100' %></b>
          <%= f.select :delivery_time, select_delivery_time, { prompt: 'how long will each order take to deliver?' }, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group form-group-vertical flex-wrap">
        <h6 class="font-weight-bold text-left pr-3 w-100 pb-0 mt-3">Where can you ship to?</h6>
        </div>
        <%= collection_check_boxes(:delivery_option, 'ship_ids', Ship.all, :id, :name) do |b| %>
          <div class="d-flex align-items-center justify-content-between mb-2 mainlang-list">
            <label class="checkbox-blk">
              <%= b.check_box checked: (b.value == 1)? true : checked_delivery_ship?(@delivery_option, b.value) %>
              <span class="checkmark"></span>
              <%= b.label %>
            </label>
            <% value_to_show = delivery_ship_price(@delivery_option.id, b.value) %>
            <%= text_field_tag 'ship_price[]', b.value == 1? "£#{40.00}" : "£#{(number_with_precision(value_to_show, precision: 2) || 0.00)}", readonly: (b.value == 1), class: 'field-me form-control', step: "any" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="text-right">
      <%= f.submit 'SAVE TEMPLATE', class: 'btn btn-radius px-4 btn-primary' %>
    </div>
  <% end %>
</div>
