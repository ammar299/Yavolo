<%= simple_form_for :filter_group, url: filter_groups_path do |form| %>
  <%= form.label :name%>
  <%= form.text_field :name %>
  <%= form.label :filter_type%>
  <%= form.select(:filter_type, options_for_select(FilterGroup.filter_types)) %>
  <br />
  <%= form.fields_for :filter_category do |filter_category| %>
    <%= form.label :category_name%>
    <%= filter_category.text_field :category_name %>
    <%= form.label :filter_group_id%>
    <%= filter_category.number_field :filter_group_id %>
  <% end %>
  <br />
  <%= form.fields_for :filter_in_category do |filter_form| %>
    <%= form.label :filter_name%>
    <%= filter_form.text_field :filter_name %>
    <%= form.label :sort_order%>
    <%= filter_form.number_field :sort_order %>
    <%= form.label :filter_group_id%>
    <%= filter_form.number_field :filter_group_id %>
  <% end %>
  <br />
  <%= form.submit %>
<% end %>
