<div class="main-page">
    <header>
        <div class="container">
            <div class="signin-header d-flex justify-content-between align-items-center">
                <div class="signin-logo d-flex align-items-center my-4">
                    <div class="logo-inner">
                        <%= image_tag "Yavolo_Logo_WarmRed.png", style: "cursor: pointer;text-decoration: none;" %>
                        <p class="my-2" style="color: #640529; font-size: 20px; font-weight: 600">A good deal better</p>
                    </div>
                    <div class="back-yavolo">
                        <a href=""><i class="fas fa-angle-left"></i> Back to Yavolo</a>
                    </div>
                </div>
                <div class="right">
                    <a href="" class="account-link">Don’t have an account yet?</a>
                    <a href="" class="register-now-bt">Register Now</a>
                </div>
            </div>
        </div>
    </header>
    <div class="main-content">
        <div class="container">
            <div class="row">
                <div class="col col-12 col-lg-6 col-md-8 mx-auto">
                    <div class="sign-in">
                        <h3 class="text-center mb-5" style="color: #640529;font-size: 48px;">Register with Yavolo
                        </h3>
                        <form action="">
                            <div class="form-group general-mrgn">
                                <label for="exampleInputEmail1">First Name*</label>
                                <input type="text" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" placeholder="First Name">
                            </div>
                            <div class="form-group general-mrgn">
                                <label for="exampleInputEmail1">Surname*</label>
                                <input type="text" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" placeholder="Surname">
                            </div>
                            <div class="form-group general-mrgn">
                                <label for="exampleInputEmail1">Email Address *</label>
                                <input type="email" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" placeholder="Email Address">
                            </div>
                            <div class="form-group general-mrgn">
                                <label for="exampleInputEmail1">Confirm Email Address*</label>
                                <input type="email" class="form-control" id="exampleInputEmail1"
                                    aria-describedby="emailHelp" placeholder="Email Address">
                            </div>
                            <div class="form-group general-mrgn">
                                <label for="exampleInputPassword1">Password *</label>
                                <input type="password" class="form-control" id="exampleInputPassword1"
                                    placeholder="Password">
                            </div>
                            <div class="form-group general-mrgn">
                                <label for="exampleInputPassword1">Confirm Password*</label>
                                <input type="password" class="form-control" id="exampleInputPassword1"
                                    placeholder="Password">
                            </div>
                            <div class="d-flex flex-wrap" style="overflow: hidden;">
                                <div class="form-check mt-3">
                                    <label class="check-container checkbox-blk">I agree to
                                            Yavolo’s <a href="" style="text-decoration:none;"><strong><u>Terms and Conditions</u></strong></a>
                                        <input type="checkbox" >
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="form-check mt-3 mb-3">
                                    <label class="check-container checkbox-blk">I’d like to receive the best deals via Email
                                        <input type="checkbox" >
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </div>
                            <button type="button" class="btn btn-primary btn-lg btn-block mb-4">Register</button>
                        </form>
                        <p class="text-center" style="color: #640529; font-size: 16px;">Are you a seller? Register your interest with Yavolo
                          <a href="" style="text-decoration: none;color: #640529;"><b><u>here!</u> </b></a>  </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="" style="background-color: #F9EDE1">
        <div class="container-fluid">
            <div class="signin-footer">
                <span>
                    <%= image_tag "Yavolo_Logo_WarmRed.png" %>                
                </span>
            </div>
        </div>

    </footer>
</div>
