<div class="container">
  <div class="row">
    <div class="col col-12 col-lg-6 col-md-8 mx-auto">
      <div class="sign-in">
        <h3 class="text-center mb-4" style="color: #640529; font-size: 48px">
          Reset your password
        </h3>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "sellers/auth/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group general-mrgn">
            <%= f.label :password, "New password", class: 'pb-2' %><br />
            <%= f.password_field :password, placeholder: 'Password', class: "form-control resest-new-password-input" %>
          </div>

          <div class="form-group general-mrgn">
            <%= f.label :password_confirmation, "Confirm password", class: 'pb-2' %><br />
            <%= f.password_field :password_confirmation, placeholder: 'Password', class: "form-control resest-new-password-input" %>
          </div>
          <div class="actions">
            <%= f.submit 'SET PASSWORD', class: "btn btn-primary btn-lg general-mrgn reset-new-password-btn px-5" %>
          </div>
        <% end %>
        <%#= render "buyers/auth/shared/links" %>
      </div>
    </div>
  </div>
</div>
