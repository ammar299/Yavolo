<div class="container">
  <div class="row">
    <div class="col col-12 col-lg-8 col-md-8 mx-auto">
      <div class="sign-in">
        <h1 class="text-center mb-4" style="color: #640529; font-size: 48px">
          Forgotten your password?
        </h1>
        <div class="text-center">
          <p>Enter your email address and we'll send you a password reset link</p>
        </div>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "sellers/auth/shared/error_messages", resource: resource %>
              <div class="form-group general-mrgn">
                <%= f.email_field :email, autofocus: true, class: "form-control reset-password-email" ,id:
                "exampleInputEmail1",placeholder: "Email Address" %>
              </div>
            <div class="actions">
              <%= f.submit 'SUBMIT', class: 'btn btn-sm btn-radius px-4 btn-primary reset-password-btn'  %>
            </div>
          <% end %>
          <%#= render "buyers/auth/shared/links" %>
      </div>
    </div>
  </div>
</div>
