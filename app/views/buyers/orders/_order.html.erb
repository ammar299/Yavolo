<% orders.each do |order| %>
  <div class="orders-card mt-5 mb-4">
    <div class="orders-card-header">
      <div class="d-flex justify-content-between align-items-center flex-wrap">
        <div class="d-flex flex-wrap">
          <div class="pr-5 my-1">
            <h6 class="my-0">Order date</h6>
            <span class="mm-text"><%= order_date_format(order) %></span>
          </div>
          <div class="pr-5 my-1 ">
            <h6 class="my-0">Total</h6>
            <span class="mm-text"><%= get_price_in_pounds(order.total) %></span>
          </div>
          <div class="pr-5 my-1">
            <h6 class="my-0">Order number</h6>
            <span class="mm-text"><%= order.order_number %></span>
          </div>
        </div>
        <div>
          <a href="" class="px-4 btn-radius btn-sm light-dark-red my-1">BUY AGAIN</a>
        </div>
      </div>
    </div>
    <div class="orders-card-body">
        <%= render 'buyers/orders/line_item', order: order %>
    </div>
  </div>
<%end%>