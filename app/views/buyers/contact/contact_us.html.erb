<div class="container-fluid pdp-pad">
  <div class="px-lg-5">
    <div class="row">
      <div class="col-lg-6">
        <h2> Contact Us </h2>
        <p>Lorem ipsum ipsum ipsum ipsum ipsum ipsum ipsum ipsum</p>
        <%= form_tag send_email_to_admin_path, id: 'contact-us-form', method: 'get' do |f| %>
          <div class="row">
            <div class="form-group col-md-6">
                <%= text_field_tag :name_field, "", :class => "form-control", placeholder: "Name" %>
            </div>
            <div class="form-group col-md-6">
              <%= text_field_tag :email_field, "", :class => "form-control", placeholder: "Email" %> 
            </div>
          </div>
            <div class="form-group">
              <%= text_field_tag :subject_field, "", :class => "form-control", placeholder: "Subject" %>
            </div>
            <div class="form-group">
              <%= text_area_tag :your_message_field, "", :class => "form-control height-200", placeholder: "Message" %>
            </div>
            <%= recaptcha_tags %>
          <div class="actions">
            <%= submit_tag("Send Message", class: "btn btn-primary btn-sm btn-radius px-4 my-3") %>
          </div>
        <% end %>
      </div>
    <div class="col-lg-6"></div>
    </div>
  </div>
</div>
