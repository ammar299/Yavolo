<div class="product-catagory-inner yo-white-card box-border">
  <h5>Products in Catagory</h5>
  <form action="">
    <div class="d-flex align-items-center flex-wrap">
      <div class="search-field active mb-3 mr-2 search-field-flex">
        <input type="text"
               placeholder="Search">
        <i class="fa fa-search" aria-hidden="true"></i>
      </div>
      <div class="form-group mr-2">
        <select class="form-control category-products-per-page">
          <option value="15">Result per page: 15</option>
          <option value="30">Result per page: 30</option>
          <option value="60">Result per page: 60</option>
          <option value="90">Result per page: 90</option>
          <option value="180">Result per page: 180</option>
        </select>
      </div>
      <div class="">
        <a href="#"
           class="btn btn-radius px-4 btn-primary mb-3">Remove from Category</a>
      </div>
    </div>
  </form>
  <div class="Yavolo-table">
    <table class="table">
      <thead>
      <tr>
        <th class="filter-groups-select-all-container">
          <label class="checkbox-blk">
            <input type="checkbox" id="filter-group-select-all">
            <span class="checkmark checkmark-white"></span>
          </label>
        </th>
        <th>Product Name</th>
        <th>Attribute</th>
        <th>Sort Order</th>
        <th>Stock</th>
        <th>Price</th>
<!--        <th class="text-right" width="">Product available</th>-->
      </tr>
      </thead>
      <tbody class="category-products-container">
      <tr>
        <td class="filter-groups-checkbox-container">
          <label class="checkbox-blk checkbox-blk-box">
            <input type="checkbox">
            <span class="checkmark"></span>
          </label>
        </td>
        <td>Mark</td>
        <td>Otto</td>
        <td>@mdo</td>
        <td>@mdo</td>
        <td>@mdo</td>
<!--        <td class="text-right">@mdo</td>-->
      </tr>
      </tbody>
    </table>
  </div>
</div>