<div class="row">
  <div class="dropdown ml-4">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Actions
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <button class="btn dropdown-item" type="button" id="delete-delivery-options">Delete</button>
  </div>
</div>
<%= link_to 'Add New Template', new_admin_delivery_option_path, class: 'btn btn-secondary ml-3' %>
</div>
<table>
  <tr>
    <th>
      <div class="checkbox-container select-all-container">
        <input type="checkbox" id="select-all" name="select-all" value="select-all">
      </div>
    </th>
    <th>
      Delivery Template Name
    </th>
    <th>
      Processing Time
    </th>
    <th>
      Delivery Time
    </th>
    <th>
      Action
    </th>
  </tr>

  <% delivery_options.each do |delivery_option| %>
    <tr>
      <td>
        <div class="checkbox-container select-checkbox-container">
          <input type="checkbox" id="<%= "select-#{delivery_option.id}" %>" value="<%= delivery_option.id %>">
        </div>
      </td>
      <td><%= delivery_option.name %></td>
      <td><%= delivery_option.processing_time.split('_').map(&:capitalize).join(' ') %></td>
      <td><%= delivery_option.delivery_time.split('_').map(&:capitalize).join(' ') %></td>
      <td>
        <%= link_to 'Edit', edit_admin_delivery_option_path(delivery_option), class: 'btn btn-secondary' %>
        <%= link_to 'Delete', admin_delivery_option_path(delivery_option), method: 'delete', class: 'btn btn-secondary ml-3' %>
      </td>
    </tr>
  <% end %>
</table>
