<% carriers.each do |carrier| %>
  <tr>
    <td>
      <div class="carrier-checkbox-container carriers-checkbox-container">
        <input type="checkbox" id="<%= "select-#{carrier.id}" %>" value="<%= carrier.id %>">
      </div>
    </td>
    <td><%= carrier.name %></td>
    <td><%= carrier.api_key %></td>
    <td><%= carrier.secret_key %></td>
    <td>
      <%= link_to 'Edit', edit_admin_carrier_path(carrier), class: 'btn btn-secondary', data: { remote: true } %>
      <%= link_to 'Delete', admin_carrier_path(carrier), method: 'delete', class: 'btn btn-secondary ml-3' %>
    </td>
  </tr>
<% end %>
