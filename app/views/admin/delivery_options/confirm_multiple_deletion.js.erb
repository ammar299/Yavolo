$('.delete-modal-body').html("<%= j render(partial: 'delivery_options_confirmation_modal') %>");
selected_delivery_options = []
$('.delivery-options-checkbox-container input[type=checkbox]:checked').each(function() {
  selected_delivery_options.push($(this).val())
});

if (selected_delivery_options.length > 0) {
  $('#delete-confirmation-modal').modal('show');
}
else{
  $('#flash-msg').html("<%= j render partial: 'shared/notice_banner', locals: {notice: 'You have not selected any delivery option'}%>");
}
