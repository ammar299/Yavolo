$('#delivery-template-form').html("<%= j render(partial: 'shared/admin/delivery_option_form', locals: { delivery_option: @delivery_option, url: admin_delivery_options_path }) %>");
$('#deliveryTemplateForm').find('h5').text('Add New Template');
<% if params[:add_new].blank? && params[:from].blank? %>
$('#deliveryTemplateForm').modal('show');
setFormValidation();
<% end %>
<% if params[:add_new].present? %>
$('#delivery-template-form #new_delivery_option').append("<input type='hidden' name='from' value='create_product'>")
$('#delivery-template-form').show();
<% elsif params[:from].present? %>
$('#delivery-template-form').hide();
$('#delivery-template-form').html("");
<% end %>
