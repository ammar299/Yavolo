<p class="pb-4 confirmation-text" id="delivery-option-text">Are you sure you want to delete this delivery template?</p>
<div class="carrier-btn text-right" id="confirmation-buttons">
  <div class="btn btn-sm btn-radius px-4 btn-primary mt-2" data-dismiss="modal">
    No
  </div>
  <% if params['path'].present? && params['path'] == 'seller' %>
    <%= link_to 'Yes', delete_delivery_option_admin_delivery_option_path(delivery_option, seller_id:  delivery_option.delivery_optionable.id), remote: true, method: 'delete', class: 'btn btn-sm btn-radius px-4 btn-primary mt-2 ml-2' %>
  <% else %>
    <%= link_to 'Yes', admin_delivery_option_path(delivery_option), method: 'delete', class: 'btn btn-sm btn-radius px-4 btn-primary mt-2 ml-2' %>
  <% end %>
</div>
