<section class="overview pt-4 pb-4 admin-delivery-options">
  <div>
    <div class="row">
      <div class="col-md-12">
        <h3 class="mt-4 mb-3">Delivery Options</h3>
        <div class="overview-inner d-flex justify-content-between align-items-center flex-wrap">
          <div class="overview-left">
            <h5 class="red-color mb-0">
              Global Delivery Templates
            </h5>
          </div>
          <div class="overview-right">
            <div class="row">
              <div class="col-lg-12 d-flex">
                <div class="dropdown-filter-field active my-1 mr-2 dropdown-filter-custom dropdown-filter-border">
                  <div class="dropdown">
                    <a href="#" class="btn btn-radius px-2 btn-primary current-search-filter positionZero" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actions <i class="fa fa-angle-down ml-3" aria-hidden="true"></i></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                      <%= link_to 'Delete', confirm_multiple_deletion_admin_delivery_options_path, class: 'dropdown-item active', data: { remote: true } %>
                    </div>
                  </div>
                </div>
                <%= link_to 'Add New Template', new_admin_delivery_option_path, class: 'btn btn-radius px-4 my-1 btn-primary btn-sm', data: { remote: true } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div>
  <div class="row">
    <div class="col-lg-12">
      <div class="Yavolo-table mt-1">
        <table class="table">
          <thead>
            <tr>
              <th>
                <div class="checkbox-container delivery-options-select-all-container">
                  <label class="checkbox-blk">
                    <input type="checkbox" class="delivery-option" id="delivery-option-select-all" name="select-all" value="select-all">
                    <span class="checkmark checkmark-white"></span>
                  </label>
                </div>
              </th>
              <th>Delivery Template Name</th>
              <th>Ship Locations</th>
              <th>Processing Time</th>
              <th>Delivery Time</th>
              <th class="text-center" width="5%">Actions</th>
            </tr>
          </thead>
          <tbody id="delivery-options-list">
            <%= render 'delivery_options_list', delivery_options: @delivery_options %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<section class="overview pt-4 pb-4">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="overview-inner d-flex justify-content-between align-items-center flex-wrap">
          <div class="overview-left">
            <h5 class="red-color">
              Carrier Name
            </h5>
          </div>
          <div class="overview-right d-flex">
            <div class="dropdown-filter-field active my-1 mr-2 dropdown-filter-custom dropdown-filter-border">
              <div class="dropdown">
                <a href="#" class="btn btn-radius px-2 btn-primary current-search-filter positionZero" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actions <i class="fa fa-angle-down ml-3" aria-hidden="true"></i></a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <%= link_to 'Delete', confirm_multiple_deletion_admin_carriers_path, class: 'dropdown-item active', data: { remote: true } %>
                </div>
              </div>
            </div>
            <%= link_to 'Add New Carrier', new_admin_carrier_path, class: ' my-1 btn btn-radius px-4 btn-primary btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="Yavolo-table mt-1 yavolo-center mb-5">
        <table class="table">
          <thead>
            <tr>
              <th width="5%" class="text-left">
                <label class="checkbox-blk">
                  <div class="carrier-checkbox-container carriers-select-all-container">
                    <input type="checkbox" class="carrier" id="carrier-select-all" name="select-all" value="select-all">
                    <span class="checkmark checkmark-white"></span>
                  </div>
                </label>
              </th>
              <th width="30%" class="text-left">Carrier Name</th>
              <th width="30%" class="text-left">Mail Class Options</th>
              <th width="30%" class="text-left">Status</th>
              <th width="5%" class="text-center">Action</th>
            </tr>
          </thead>
          <tbody id="carriers-list">
            <%= render 'carriers_list', carriers: @carriers %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- Delivery Template Form Modal -->
<div class="modal fade align-items-start" id="deliveryTemplateForm" tabindex="-1" role="dialog" aria-labelledby="deliveryOptionFormLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body px-lg-3">
        <div id="delivery-template-form"></div>
      </div>
    </div>
  </div>
</div>
<!-- Delivery Template Confirmation Deletion Modal -->
<%= render 'shared/admin/confirmation_deletion_modal' %>
<script>
  $('body').on('click', '.delivery-options-checkbox-container', function() {
      if (!$(this).is(":checked") && $('.delivery-options-select-all-container').find('input[type="checkbox"]').is(":checked")) {
          $('.delivery-options-select-all-container').find('input[type="checkbox"]').prop("checked", false);
      }
  })
  $('body').on('click', '.carriers-checkbox-container', function() {
      if (!$(this).is(":checked") && $('.carriers-select-all-container').find('input[type="checkbox"]').is(":checked")) {
          $('.carriers-select-all-container').find('input[type="checkbox"]').prop("checked", false);
      }
  })
</script>
