<%= form_tag url, method: method, id: 'assigned-category-form-filter-group', :class => 'd-flex align-items-center assign-category-form form-group-vertical-responsive' do %>
  <%= hidden_field_tag :filter_group_ids, @filter_group_ids %>
  <%= label_tag :category_name, "Category Name", :class => "bold-label" %>
  <%= select_tag :category, options_from_collection_for_select(Category.all,:id, "category_name"),multiple:true, required: true, prompt: 'Select category', class: 'form-control assign-category-bulk-select-tag mr-3' %>
  <a href="#">+</a>
<% end %>
<div class="text-right mt-3">
    <%= submit_tag 'Assign Category', class: "btn btn-radius px-4 btn-primary btn-sm"%>
  </div>

<script>
  $(document).ready(function () {
    $(".assign-category-bulk-select-tag").selectize({
    });
  })
</script>
