<div class='nested-fields'>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group error-position">
        <div class="row m-0">
          <div class="col-lg-5 p-0 form-group-vertical align-items-center flex-lg-nowrap flex-wrap">
             <%= f.label :filter_name, "Filter Name" %>
              <div style="flex: 1;position: relative;">
                <%= f.text_field :filter_name, required: true, class: 'form-control filter-name' %>
              </div>
          </div>
          <div class="col-lg-3 p-0 form-group-vertical align-items-center flex-lg-nowrap flex-wrap filter-in-category-sort-order-wrapper">
            <div class="d-flex px-3 tab-100">
              <%= f.label :sort_order, "Sort Order" , class: 'text-left pr-3 min-100'%>
              <div style="flex: 1;position: relative;">
                <%= f.number_field :sort_order, required: true, class: 'form-control w-20 px-2 filter-sort-order' %>
              </div>
            </div>
          </div>
          <div class="col-lg-4 p-0 form-group-vertical align-items-center flex-lg-nowrap flex-wrap">
            <label for="exampleInputPassword1" class="text-left pr-3">Assigned Baby Category</label>
            <div style="flex: 1;position: relative;">
              <%= f.select(:category_id, options_for_select(Category.where(baby_category: :true).pluck(:category_name, :id), selected: f.object.category_id), {}, {class: "text-left pr-3 form-control filter-in-categories-dropdown" }) %>
            </div>
            <%= link_to_remove_association f,class: 'filter_in_categories' do %>
              <span> <i class="pl-3 min-btn"></i></span>
              <p class="pl-3 pluse-btn"> - </p>
            <% end %>
          </div>
        </div>
     
      
      
      </div>
    </div>
  </div>
</div>
