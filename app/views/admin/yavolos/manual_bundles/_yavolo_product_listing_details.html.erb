<div class="row">
  <div class="col-md-12">
    <%= hidden_field_tag 'products[][id]', product.id %>
    <div class="listing detail box-border yo-white-card" id="listing-details">
      <h4>Listing Details - <%= product.title %></h4>
      <hr>
      <div>
        <% has_error, msg = get_errors(form, :title) %>
        <div class="form-group general-mrgn <%= has_error ? 'error-field' : '' %>">
          <%= form.label :title, 'Title / H1 tag*' %>
          <%= text_field_tag 'products[][title]',product.title, class: 'form-control', placeholder: 'Include all those important keywords' %>
          <%="<small class='form-text'>#{msg}</small>".html_safe if has_error %>
        </div>

        <p class="mb-0">Product Spec</p>

        <div class="ebay-forms d-flex justify-content-between flex-wrap align-items-center">

          <% has_error, msg = get_errors(form, :width) %>
          <div class="form-group general-mrgn mb-0 mt-2 <%= has_error ? 'error-field' : '' %>">
            <%= form.label 'Width' %>
            <%= number_field_tag 'products[][width]',product.width, class: 'form-control', min: 0, disabled: true %>
            <%="<small class='form-text'>#{msg}</small>".html_safe if has_error %>
          </div>

          <% has_error, msg = get_errors(form, :depth) %>
          <div class="form-group general-mrgn mb-0 mt-2 <%= has_error ? 'error-field' : '' %>">
            <%= form.label 'Depth' %>
            <%= number_field_tag 'products[][depth]',product.depth, class: 'form-control', min: 0,disabled: true %>
            <%="<small class='form-text'>#{msg}</small>".html_safe if has_error %>
          </div>

          <% has_error, msg = get_errors(form, :height) %>
          <div class="form-group general-mrgn mb-0 mt-2 <%= has_error ? 'error-field' : '' %>">
            <%= form.label 'Height' %>
            <%= number_field_tag 'products[][height]',product.height, class: 'form-control', min: 0 , disabled: true%>
            <%="<small class='form-text'>#{msg}</small>".html_safe if has_error %>
          </div>

          <% has_error, msg = get_errors(form, :colour) %>
          <div class="form-group general-mrgn mb-0 mt-2 <%= has_error ? 'error-field' : '' %>">
            <%= form.label 'Colour' %>
            <%= text_field_tag 'products[][colour]',product.colour, class: 'form-control', disabled: true %>
            <%="<small class='form-text'>#{msg}</small>".html_safe if has_error %>
          </div>

          <% has_error, msg = get_errors(form, :material) %>
          <div class="form-group general-mrgn mb-0 mt-2 <%= has_error ? 'error-field' : '' %>">
            <%= form.label 'Material' %>
            <%= text_field_tag 'products[][material]',product.material, class: 'form-control', disabled: true %>
            <%="<small class='form-text'>#{msg}</small>".html_safe if has_error %>
          </div>

        </div>

        <% has_error, msg = get_errors(form, :keywords) %>
        <div class="form-group general-mrgn <%= has_error ? 'error-field' : '' %>">
          <%= form.label 'Keywords*' %>
          <%= text_field_tag 'products[][keywords]',product.keywords, class: 'form-control', placeholder: 'Help customers find your product by selecting relevant keywords for your product', data: {role: "tagsinput"}, id: 'product_keywords', size: "100" %>
          <%="<small class='form-text'>#{msg}</small>".html_safe if has_error %>
        </div>

        <% has_error, msg = get_errors(form, :description) %>
        <div class="form-group <%= has_error ? 'error-field' : '' %>">
          <%= form.label 'Description*' %>
          <%= text_area_tag 'products[][description]',product.description, class: 'form-control ckeditor-field', placeholder: 'Why should the world buy your amazing product?' %>
          <%="<small class='form-text'>#{msg}</small>".html_safe if has_error %>
        </div>
      </div>
    </div>
  </div>
</div>