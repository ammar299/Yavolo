<div class="row">
  <div class="col-lg-12">
    <div class="delivery-detail-footer-innerr d-flex justify-content-between flex-wrap mb-4">
      <div class="fooetr-left">
        <a href="#" class="btn btn-sm btn-radius px-4 btn-outline-white mb-2 mt-2 back-btn-action">BACK</a>
      </div>
      <div class="footer-left">
        <% if form.object.persisted? %>
          <%= link_to "PREVIEW LISTING", product_path(@yavolo_bundle.handle, preview_listing: true), class: "btn btn-sm btn-radius px-4 btn-outline-white mb-2 mt-2 preview_listing", target: "_blank" %>
          <%= hidden_field_tag "yavolo_bundle_id", @yavolo_bundle.id, id: "yavolo_bundle_id" %>
        <% end %>
        <% if form.object.new_record? || form.object.status_draft? %>
          <%= form.submit 'SAVE DRAFT', class: 'btn btn-sm btn-radius px-4 btn-bg-white mb-2 mt-2 mr-2',data: { disable_with: false } %>
        <% end %>
        <%= yield if block_given? %>
      </div>
    </div>
  </div>
</div>
