<table class="table table-striped">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Seller Since</th>
    <th>Last Sale</th>
    <th>Active Listings</th>
    <th>Lifetime Sales</th>
    <th>Account Status</th>
    <th>Account Health</th>
    <th>Actions</th>
  </tr>
  <% @sellers.each do |seller| %>
    <tr>
      <td><%= seller.first_name %></td>
      <td><%=seller.email %></td>
      <td><%=seller.created_at %></td>
      <td>Show the last sale date</td>
      <td>Show the number of active listings</td>
      <td>Show the total sales</td>
      <td><%= seller.account_status %></td>
      <td>show the health status</td>
      <td>
        <div class="align-self-center">
          <button type="button" class="btn btn-secondary">Approve</button>
        </div>
        <div class="align-self-center mt-1">
          <%= link_to 'Edit', admin_seller_path(seller), class: 'btn btn-secondary' %>
        </div>
        <div class="align-self-center mt-1">
          <button type="button" class="btn btn-secondary">Suspend</button>
        </div>
        <div class="align-self-center mt-1">
          <button type="button" class="btn btn-secondary">Re-Activate</button>
        </div>
        <div class="align-self-center mt-1">
          <button type="button" class="btn btn-secondary">Contact</button>
        </div>
        <div class="align-self-center mt-1">
          <button type="button" class="btn btn-secondary">View Product</button>
        </div>
      </td>
    </tr>
  <% end %>
</table>
