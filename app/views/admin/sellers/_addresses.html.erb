<div id="<%=address.address_type%>">
  <h5 class="text-center"><%= address.address_type.humanize %></h5>
  <table class="table mt-2">
    <tbody>
      <tr>
        <!--<td class="">Address Line 1:</td>-->
        <td>
          <%= simple_format(address_format(address)) %>
        </td>
      </tr>
      <tr>
        <td class="">Phone Number:</td>
        <td><%= address.phone_number.present? ? address.phone_number : "" %></td>
      </tr>
    </tbody>
  </table>
</div>
