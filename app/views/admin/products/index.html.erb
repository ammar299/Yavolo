<%= render 'shared/custom_confirm_modal', request_path: enable_yavolo_admin_products_path %>
<%=hidden_field_tag :namespace, 'admin', id: 'namespace' %>
<div class="row y-page-container">
    <div class="col-lg-12">
        <div class="all-products-header d-flex justify-content-between align-items-center mt-3">
            <div class="all-products-header-left d-flex flex-wrap">
                <div class="dropdown-filter-field active my-1 dropdown-filter-custom">
                    <div class="dropdown">
                        <a class="btn btn-radius btn-sm px-3 btn-primary current-search-filter" href="#" role="button"
                            id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            <%= set_filter_type_in_dropdown(params) %> <i class="fa fa-angle-down ml-4" aria-hidden="true"></i>
                        </a>

                        <div class="dropdown-menu seller-products-filters" aria-labelledby="dropdownMenuLink">
                          <a class="dropdown-item <%=set_filter_active('Search All')%>" href="#">Search All <i
                              class="fa fa-check" aria-hidden="true"></i></a>
                          <a class="dropdown-item <%=set_filter_active('Product Title')%>" href="#">Product Title<i
                              class="fa fa-check" aria-hidden="true"></i></a>
                          <a class="dropdown-item <%=set_filter_active('Brand')%>" href="#">Brand <i
                              class="fa fa-check" aria-hidden="true"></i></a>
                          <a class="dropdown-item <%=set_filter_active('SKU')%>" href="#">SKU <i
                              class="fa fa-check" aria-hidden="true"></i></a>
                          <a class="dropdown-item <%=set_filter_active('YAN')%>" href="#">YAN <i
                              class="fa fa-check" aria-hidden="true"></i></a>
                          <a class="dropdown-item <%=set_filter_active('EAN')%>" href="#">EAN <i
                              class="fa fa-check" aria-hidden="true"></i></a>
                        </div>
                    </div>

                    <div class="search-field mb-0 ">
                    <%= search_form_for @q, url: admin_products_path do |f| %>
                      <input type="hidden" name="filter_type" id="product-filter-type" value="<%= params[:filter_type] %>">
                      <input type="hidden" name="csfname" id="csfn" value="<%= current_search_field_name %>">
                      <% if params[:q].present? && params[:q].keys.include?('s') %>
                      <%=hidden_field_tag 'q[s]', params[:q][:s] %>
                      <% end %>
                      <% if params[:yavolo_enabled].present? %>
                      <%=hidden_field_tag 'yavolo_enabled', params[:yavolo_enabled], class: 'yp-yavolo_enabled' %>
                      <% end %>
                      <% if params[:per_page].present? %>
                      <%=hidden_field_tag :per_page, params[:per_page] %>
                      <% end %>
                      <% if params[:statuses].present? %>
                      <%=hidden_field_tag 'statuses', params[:statuses], class: 'yp-statuses' %>
                      <% end %>
                      <%= f.search_field current_search_field_name.to_sym, { class: 'input-btn-sm seller-product-search-field', placeholder: 'Search Products', value: "#{search_field_query_param_val(params)}" } %>
                      <i class="fa fa-search" aria-hidden="true"></i>
                    <% end %>
                    </div>
                </div>
                <div class="dropdown-filter-field dropdown-filter-custom active mb-8 my-1 ml-2 dropdown-filter-border">
                  <div class="dropdown">
                    <a href="#" class="btn btn-radius btn-sm px-3 btn-primary btn-link-dropdown-1 align-items-center" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actions <i class="fa fa-angle-down ml-3" aria-hidden="true"></i></a>
                    <div class="dropdown-menu bulk-actions" aria-labelledby="dropdownMenuLink">
                        <a data-bulkaction="activate" class="dropdown-item" href="#">Activate</a>
                        <a data-bulkaction="deactivate" class="dropdown-item" href="#">Deactivate</a>
                        <a data-bulkaction="yavolo_enabled" class="dropdown-item" href="#">Yavolo Enable</a>
                        <a data-bulkaction="yavolo_disabled" class="dropdown-item" href="#">Yavolo Disable</a>
                        <a data-bulkaction="delete" class="dropdown-item" href="#">Delete</a>
                        <a data-bulkaction="update_price" class="dropdown-item" href="#">Update Price</a>
                        <a data-bulkaction="update_stock" class="dropdown-item" href="#">Update Stock</a>
                        <a data-bulkaction="update_discount" class="dropdown-item" href="#">Update discount</a>
                    </div>
                  </div>
                </div>
                <div class="dropdown-filter-field dropdown-filter-custom active mb-8 my-1 ml-2 dropdown-filter-border" id="pages-id">
                  <div class="dropdown">
                    <a href="#" class="btn btn-radius btn-sm px-3 btn-primary my-0 btn-link-dropdown-1 d-inline-flex align-items-center" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Results Per Page: <%= "##{params[:per_page]}" if params[:per_page].present? %><i class="fa fa-angle-down ml-3" aria-hidden="true"></i></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                      <%= form_tag(admin_products_path, method: :get) do %>
                      <%= link_to "javascript:void(0);", data: { per_page: 15 }, class: 'perpage-option'  do %>
                      <span class="<%= 'fa fa-check' if params[:per_page] == '15' %>" aria-hidden="true"></span>
                      Result per page: #15
                      <% end %>
                      <%= link_to "javascript:void(0);", data: { per_page: 30 }, class: 'perpage-option'  do %>
                      <span class="<%= 'fa fa-check' if params[:per_page] == '30' %>" aria-hidden="true"></span>
                      Result per page: #30
                      <% end %>
                      <%= link_to "javascript:void(0);", data: { per_page: 60 }, class: 'perpage-option'  do %>
                      <span class="<%= 'fa fa-check' if params[:per_page] == '60' %>" aria-hidden="true"></span>
                      Result per page: #60
                      <% end %>
                      <%= link_to "javascript:void(0);", data: { per_page: 90 }, class: 'perpage-option'  do %>
                      <span class="<%= 'fa fa-check' if params[:per_page] == '90' %>" aria-hidden="true"></span>
                      Result per page: #90
                      <% end %>
                      <%= link_to "javascript:void(0);", data: { per_page: 180 }, class: 'perpage-option'  do %>
                      <span class="<%= 'fa fa-check' if params[:per_page] == '180' %>" aria-hidden="true"></span>
                      Result per page: #180
                      <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <div class="dropdown-filter-field dropdown-filter-custom active mb-8 my-1 ml-2 dropdown-filter-border">
                <div class="dropdown">
                  <a href="#" class="btn btn-radius btn-sm px-3 btn-primary my-0 btn-link-dropdown-1 d-inline-flex align-items-center" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= set_product_sort_by_in_dropdown(params) %> <i class="fa fa-angle-down ml-3" aria-hidden="true"></i></a>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">

                    <% q_params = {q: params[:q].present? ? (params.require(:q).merge(s: 'title asc').permit!) : {s: 'title asc'} }
                      q_params.merge!(filter_type: params[:filter_type]) if params[:filter_type].present?
                      q_params.merge!(csfname: params[:csfname]) if params[:csfname].present?
                    %>
                    <%=link_to '#', class: 'dropdown-item sortby-products', data: {sortby: 'title asc'} do %>
                      Product Title A-Z
                      <% if params.dig(:q, :s).present? && params[:q][:s]=='title asc' %>
                      <i class="fa fa-check" aria-hidden="true"></i>
                      <% end %>
                    <% end %>

                    <% q_params = {q: params[:q].present? ? (params.require(:q).merge(s: 'title desc').permit!) : {s: 'title desc'} }
                      q_params.merge!(filter_type: params[:filter_type]) if params[:filter_type].present?
                      q_params.merge!(csfname: params[:csfname]) if params[:csfname].present?
                    %>
                    <%=link_to '#', class: 'dropdown-item sortby-products',data: {sortby: 'title desc'} do %>
                      Product Title Z-A
                      <% if params.dig(:q, :s).present? && params[:q][:s]=='title desc' %>
                      <i class="fa fa-check" aria-hidden="true"></i>
                      <% end %>
                    <% end %>

                    <% q_params = {q: params[:q].present? ? (params.require(:q).merge(s: 'price desc').permit!) : {s: 'price desc'} }
                      q_params.merge!(filter_type: params[:filter_type]) if params[:filter_type].present?
                      q_params.merge!(csfname: params[:csfname]) if params[:csfname].present?
                    %>

                    <%=link_to '#', class: 'dropdown-item sortby-products', data: {sortby: 'price desc'}  do %>
                      Price High-Low
                      <% if params.dig(:q, :s).present? && params[:q][:s]=='price desc' %>
                        <i class="fa fa-check" aria-hidden="true"></i>
                      <% end %>
                    <% end %>

                    <% q_params = {q: params[:q].present? ? (params.require(:q).merge(s: 'price asc').permit!) : {s: 'price asc'} }
                      q_params.merge!(filter_type: params[:filter_type]) if params[:filter_type].present?
                      q_params.merge!(csfname: params[:csfname]) if params[:csfname].present?
                    %>

                    <%=link_to '#', class: 'dropdown-item sortby-products', data: {sortby: 'price asc'} do %>
                      Price Low-High
                      <% if params.dig(:q, :s).present? && params[:q][:s]=='price asc' %>
                        <i class="fa fa-check" aria-hidden="true"></i>
                      <% end %>
                    <% end %>
                    
                    <% q_params = {q: params[:q].present? ? (params.require(:q).merge(s: 'yavolo_enabled asc').permit!) : {s: 'yavolo_enabled asc'} }
                      q_params.merge!(filter_type: params[:filter_type]) if params[:filter_type].present?
                      q_params.merge!(csfname: params[:csfname]) if params[:csfname].present?
                    %>

                    <%=link_to admin_products_path(q_params), class: "dropdown-item admin-filter-by #{ params['yavolo_enabled']=='1' ? 'active' : '' }", data: {status: 'yavolo_enabled' } do %>
                      Yavolo Enabled
                      <% if params['yavolo_enabled']=='1'%>
                        <span class="fa fa-check" aria-hidden="true"></span>
                      <% end %>
                    <% end %>

                    <% q_params = {q: params.require(:q).permit! } if params[:q].present?
                      q_params.merge!(filter_type: params[:filter_type]) if params[:filter_type].present?
                      q_params.merge!(csfname: params[:csfname]) if params[:csfname].present?
                      q_params.merge!(filter_by: 0)
                    %>

                    <%= link_to admin_products_path(q_params),class: "dropdown-item admin-filter-by #{ params[:statuses].present? && params[:statuses].split(',').include?('draft') ? 'active' : '' }", data: {status: :draft } do %>
                      Draft
                      <% if params[:statuses].present? && params[:statuses].split(',').include?('draft')%>
                      <span class="fa fa-check" aria-hidden="true"></span>
                      <% end %>
                    <% end %>
                    <% q_params = {q: params.require(:q).permit! } if params[:q].present?
                      q_params.merge!(filter_type: params[:filter_type]) if params[:filter_type].present?
                      q_params.merge!(csfname: params[:csfname]) if params[:csfname].present?
                      q_params.merge!(filter_by: 1)
                    %>
                    <%= link_to admin_products_path(q_params),class: "dropdown-item admin-filter-by #{ params[:statuses].present? && params[:statuses].split(',').include?('active') ? 'active' : '' }", data: {status: :active } do %>
                      Active
                      <% if params[:statuses].present? && params[:statuses].split(',').include?('active')%>
                      <span class="fa fa-check" aria-hidden="true"></span>
                      <% end %>
                    <% end %>

                    <% q_params = {q: params.require(:q).permit! } if params[:q].present?
                      q_params.merge!(filter_type: params[:filter_type]) if params[:filter_type].present?
                      q_params.merge!(csfname: params[:csfname]) if params[:csfname].present?
                      q_params.merge!(filter_by: 2)
                    %>
                    <%= link_to admin_products_path(q_params),class: "dropdown-item admin-filter-by #{ params[:statuses].present? && params[:statuses].split(',').include?('inactive') ? 'active' : '' }", data: {status: :inactive } do %>
                      Inactive
                      <% if params[:statuses].present? && params[:statuses].split(',').include?('inactive')%>
                      <span class="fa fa-check" aria-hidden="true"></span>
                      <% end %>
                    <% end %>
                    <% q_params = {q: params.require(:q).permit! } if params[:q].present?
                      q_params.merge!(filter_type: params[:filter_type]) if params[:filter_type].present?
                      q_params.merge!(csfname: params[:csfname]) if params[:csfname].present?
                      q_params.merge!(filter_by: 3)
                    %>
                    <%= link_to admin_products_path(q_params),class: "dropdown-item admin-filter-by #{ params[:statuses].present? && params[:statuses].split(',').include?('pending') ? 'active' : '' }", data: {status: :pending } do %>
                      Pending
                      <% if params[:statuses].present? && params[:statuses].split(',').include?('pending')%>
                      <span class="fa fa-check" aria-hidden="true"></span>
                      <% end %>
                    <% end %>
                    <% q_params = {q: params.require(:q).permit! } if params[:q].present?
                      q_params.merge!(filter_type: params[:filter_type]) if params[:filter_type].present?
                      q_params.merge!(csfname: params[:csfname]) if params[:csfname].present?
                      q_params.merge!(filter_by: 4)
                    %>
                    <%= link_to admin_products_path(q_params),class: "dropdown-item admin-filter-by #{ params[:statuses].present? && params[:statuses].split(',').include?('disapproved') ? 'active' : '' }", data: {status: :disapproved } do %>
                      Disapproved
                      <% if params[:statuses].present? && params[:statuses].split(',').include?('disapproved')%>
                      <span class="fa fa-check" aria-hidden="true"></span>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <div class="all-products-header-right d-flex justify-content-between">
                <a href="#" class="btn btn-sm btn-radius px-2 btn-primary mr-1 upload-csv-btn">Upload CSV</a>
                <%= link_to "Export CSV", export_csv_admin_products_path(:format => :csv), class: 'btn btn-sm btn-radius px-2 btn-primary mr-1' %>
                <%=link_to 'Create New Product', new_admin_product_path, class: 'btn btn-sm btn-radius px-2 btn-primary' %>
            </div>
        </div>
        <div class="filter-by-tags d-flex justify-content-start mt-2"><%=print_filter_by_status_tags.to_s.html_safe %></div>

<div class="row">
    <div class="col-lg-12">
      <div class="mt-3" id="total-sellers-per-page">
        <%= render partial: 'shared/result_of_pages', locals: {total_count: Product.count, count: @products.count } %>
      </div>
      <h3 class="mt-4 mb-3">All Products</h3>
        <div class="Yavolo-table mt-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <label class="checkbox-blk">
                                <input type="checkbox" class="mark-bulk-update">
                                <span class="checkmark checkmark-white"></span>
                            </label>
                        </th>
                        <th>Status</th>
                        <th>Image</th>
                        <th>product Name</th>
                        <th>Attribute</th>
                        <th>Seller</th>
                        <th>Stock</th>
                        <th>Price</th>
                        <th>30 Day Sales</th>
                        <th>30 Day Revenue</th>
                        <th>Yavolo Enabled</th>
                        <th>Yavolo Discount</th>
                        <th class="text-center">Assign</th>
                        <th class="text-center">Actions</th>

                    </tr>
                </thead>
                <tbody>
                  <% @products.each do |product| %>
                    <tr class="prod-table-row" id="prod-id-<%=product.id%>">
                        <td>
                            <label class="checkbox-blk">
                                <input type="checkbox" name="product_ids[]" class="product_ids" value="<%=product.id%>">
                                <span class="checkmark"></span>
                            </label>
                        </td>
                        <td class="product-status"><%= product.status.to_s.titleize %></td>
                        <td>
                            <div class="">
                                <span class="imglist" width="100%">
                                <% if product.pictures.present?%>
                                  <% if product.pictures.first&.name&.url.present? %>
                                    <%=image_tag product.pictures.first&.name&.url(:thumb) %>
                                  <% end %>
                                  <% else %>
                                    <%= image_tag 'default.jpg'%>
                                <% end %> 
                                </span>
                            </div>
                        </td>
                        <td>
                            <%=product.title%>
                        </td>
                        <td>
                          <p class="mb-0">SKU: <%=product.sku %></p>
                          <p class="mb-0">EAN: <%=product.ean %></p>
                          <p class="mb-0">Brand: <%=product.brand %></p>
                          <p class="mb-0">Condition: <%=product.condition=='brand_new' ? 'New' : product.condition.titleize %></p>
                        </td>
                        <td>
                          <% if product.owner.class.name=='Seller' %>
                          <%="#{product.owner.first_name} #{product.owner.last_name}"%>
                          <% else %>
                            Admin
                          <% end %>
                        </td>
                        <td class="stock-box"><%=product.stock.to_i %></td>
                        <td class="price-box"><%=number_to_currency((number_with_precision(product.price, :precision => 2) || 0), unit: '£') %></td>
                        <td><%=number_to_currency((number_with_precision(300, :precision => 2) || 0), unit: '£') %></td>
                        <td><%=number_to_currency((number_with_precision(300, :precision => 2) || 0), unit: '£') %></td>
                        <td>
                            <% if product.yavolo_enabled %>
                                <div class="d-flex">
                                    <div>
                                        <span class="icon-manage-Yavolo font-20px light-red p-yavolo-enabled"></span>
                                    </div>
                                </div>
                            <% else %>
                                <div class="d-flex">
                                    <div>
                                        <span class="icon-manage-Yavolo font-20px light-red yo-opacity p-yavolo-disabled"></span>
                                    </div>
                                </div>
                            <% end %>
                        </td>
                        <td class="discount-box"><%= "#{product.discount}" %></td>
                        <td>
                            <div class="d-flex">
                                <span class="icon-star pr-1 font-20px pr-2"></span>
                                <span class="icon-Yavolo-selling-fast-icon pr-2 font-20px"></span>
                                <span class="icon-Yavolo-top-seller-icon  font-20px"></span>
                            </div>
                        </td>
                        <td>
                            <div class="row-actions">
                                <%=link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-sm btn-radius px-4 btn-secondary mb-2 w-100' %>
                                <%=link_to 'Duplicate', new_admin_product_path(dup_product_id: product.id), class: 'btn btn-sm btn-radius px-4 btn-secondary w-100' %>
                            </div>
                        </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
            <% if @products.count == 0 %>
              <p class="text-center my-5">No Result Found</p>
            <% end %>
        </div>
        <div class="row">
          <div class="col-md-4 mx-auto">
            <div class="pager-middle text-center d-flex justify-content-center mb-4">
              <div class="text-center"><%= paginate @products %></div>
            </div>
          </div>
        </div>
    </div>
</div>

