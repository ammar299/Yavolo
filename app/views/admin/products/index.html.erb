<%= render 'shared/custom_confirm_modal', request_path: enable_yavolo_admin_products_path %>
<%=hidden_field_tag :namespace, 'admin', id: 'namespace' %>
<div class="row y-page-container">
    <div class="col-lg-12">
        <div class="all-products-header d-flex justify-content-between align-items-center mt-3">
            <div class="all-products-header-left d-flex">
                <div class="dropdown-filter-field active mb-0">
                    <div class="dropdown">
                        <a class="btn btn-radius btn-sm px-3 btn-primary current-search-filter" href="#" role="button"
                            id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            <%= set_filter_type_in_dropdown(params) %> <i class="fa fa-angle-down ml-4" aria-hidden="true"></i>
                        </a>

                        <div class="dropdown-menu seller-products-filters" aria-labelledby="dropdownMenuLink">
                          <a class="dropdown-item active" href="#">Search All <i
                              class="fa fa-check" aria-hidden="true"></i></a>
                          <a class="dropdown-item" href="#">Product Title <i
                              class="fa fa-check" aria-hidden="true"></i></a>
                          <a class="dropdown-item" href="#">Brand <i
                              class="fa fa-check" aria-hidden="true"></i></a>
                          <a class="dropdown-item" href="#">SKU <i
                              class="fa fa-check" aria-hidden="true"></i></a>
                          <a class="dropdown-item" href="#">YAN <i
                              class="fa fa-check" aria-hidden="true"></i></a>
                          <a class="dropdown-item" href="#">EAN <i
                              class="fa fa-check" aria-hidden="true"></i></a>
                        </div>
                    </div>
                    <%
                      if params[:q].present?
                        field_name = params[:q].keys.first
                      else
                        field_name = "title_or_brand_or_sku_or_yan_or_ean_cont"
                      end
                    %>
                    <div class="search-field mb-0 ">
                    <%= search_form_for @q, url: admin_products_path do |f| %>
                      <input type="hidden" name="filter_type" id="product-filter-type" value="<%= params[:filter_type] %>">
                      <%= f.search_field field_name.to_sym, { class: 'input-btn-sm seller-product-search-field', placeholder: 'Search Products', value: "#{search_field_query_param_val(params)}" } %>
                      <i class="fa fa-search" aria-hidden="true"></i>
                    <% end %>
                    </div>
                </div>
                <div class="dropdown dropdown-filter  d-inline-flex">
                    <a href="#"
                        class="btn btn-sm btn-radius px-3 btn-link btn-link-dropdown d-inline-flex align-items-center"
                        id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">Action <i class="fa fa-angle-down ml-3"
                            aria-hidden="true"></i></a>
                    <div class="dropdown-menu bulk-actions" aria-labelledby="dropdownMenuLink">
                        <a data-bulkaction="activate" class="dropdown-item" href="#">Activate <i
                                class="fa fa-check" aria-hidden="true"></i></a>
                        <a data-bulkaction="yavolo_enabled" class="dropdown-item" href="#">Yavolo Enabled<i
                                class="fa fa-check" aria-hidden="true"></i></a>
                        <a data-bulkaction="yavolo_disabled" class="dropdown-item" href="#">Yavolo Disabled<i
                                class="fa fa-check" aria-hidden="true"></i></a>
                        <a data-bulkaction="delete" class="dropdown-item" href="#">Delete<i
                                class="fa fa-check" aria-hidden="true"></i></a>
                        <a data-bulkaction="update_price" class="dropdown-item" href="#">Update Price<i
                                class="fa fa-check" aria-hidden="true"></i></a>
                        <a data-bulkaction="update_stock" class="dropdown-item" href="#">Update Stock<i
                                class="fa fa-check" aria-hidden="true"></i></a>
                        <a data-bulkaction="update_discount" class="dropdown-item" href="#">Update discount<i
                                class="fa fa-check" aria-hidden="true"></i></a>
                    </div>
                </div>
                <%if Product.count > 14 %>
                  <div class="dropdown dropdown-filter  d-inline-flex" id="pages-id">
                    <a href="#" class="btn btn-sm btn-radius px-3 btn-link btn-link-dropdown d-inline-flex align-items-center" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Result Per Page <%= params[:per_page] %><i class="fa fa-angle-down ml-3" aria-hidden="true"></i></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                      <%= form_tag(admin_products_path, method: :get) do %>
                        <%= link_to (admin_products_path(per_page: '15'))  do %>
                        <span class="<%= 'fa fa-check' if params[:per_page] == '15' %>" aria-hidden="true"></span>
                        Result per page 15
                        <% end %>
                        <% if Product.count >= 30 %>
                          <%= link_to (admin_products_path(per_page: '30'))  do %>
                            <span class="<%= 'fa fa-check' if params[:per_page] == '30' %>" aria-hidden="true"></span>
                            Result per page 30
                          <% end %>
                        <% elsif Product.count >= 60 %>
                          <%= link_to (admin_products_path(per_page: '60'))  do %>
                            <span class="<%= 'fa fa-check' if params[:per_page] == '60' %>" aria-hidden="true"></span>
                            Result per page 60
                          <% end %>
                        <% elsif Product.count >= 90 %>
                          <%= link_to (admin_products_path(per_page: '90'))  do %>
                            <span class="<%= 'fa fa-check' if params[:per_page] == '90' %>" aria-hidden="true"></span>
                            Result per page 90
                          <% end %>
                        <% elsif Product.count >= 180 %>
                          <%= link_to (admin_products_path(per_page: '180'))  do %>
                            <span class="<%= 'fa fa-check' if params[:per_page] == '180' %>" aria-hidden="true"></span>
                            Result per page 180
                          <% end %>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
            
              <div class="dropdown dropdown-filter  d-inline-flex">
                <a href="#"
                    class="btn btn-sm btn-radius px-3 btn-link btn-link-dropdown d-inline-flex align-items-center"
                    id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false"><%= set_product_filter_by_in_dropdown(params) %> <i class="fa fa-angle-down ml-3"
                        aria-hidden="true"></i></a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <%=link_to 'Product Title A-Z',admin_products_path({q: params[:q].present? ? (params.require(:q).merge!(s: 'title asc').permit!) : {s: 'title asc'} })  %>
                  <%=link_to 'Product Title Z-A',admin_products_path({q: params[:q].present? ? (params.require(:q).merge!(s: 'title desc').permit!) : {s: 'title desc'} })  %>
                  <%=link_to 'Price High-Low',admin_products_path({q: params[:q].present? ? (params.require(:q).merge!(s: 'price desc').permit!) : {s: 'price desc'} })  %>
                  <%=link_to 'Price Low-High',admin_products_path({q: params[:q].present? ? (params.require(:q).merge!(s: 'price asc').permit!) : {s: 'price asc'} })  %>
                  <%=link_to 'Yavolo Enabled',admin_products_path({q: params[:q].present? ? (params.require(:q).merge!(s: 'yavolo_enabled asc').permit!) : {s: 'yavolo_enabled asc'} })  %>

                  <%= link_to admin_products_path(filter_by: 0),class: 'dropdown-item' do %>
                    Draft
                    <span class="<%= 'fa fa-check' if set_product_filter_by_in_dropdown(params) == 'Draft' %>" aria-hidden="true"></span>
                  <% end %>
                  <%= link_to admin_products_path(filter_by: 1),class: 'dropdown-item' do %>
                    Active
                    <span class="<%= 'fa fa-check' if set_product_filter_by_in_dropdown(params) == 'Active' %>" aria-hidden="true"></span>
                  <% end %>
                  <%= link_to admin_products_path(filter_by: 2),class: 'dropdown-item' do %>
                    Inactive
                    <span class="<%= 'fa fa-check' if set_product_filter_by_in_dropdown(params) == 'Inactive' %>" aria-hidden="true"></span>
                  <% end %>
                  <%= link_to admin_products_path(filter_by: 3),class: 'dropdown-item' do %>
                    Pending
                    <span class="<%= 'fa fa-check' if set_product_filter_by_in_dropdown(params) == 'Pending' %>" aria-hidden="true"></span>
                  <% end %>
                  <%= link_to admin_products_path(filter_by: 4),class: 'dropdown-item' do %>
                    Disapproved
                    <span class="<%= 'fa fa-check' if set_product_filter_by_in_dropdown(params) == 'Disapproved' %>" aria-hidden="true"></span>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="all-products-header-right d-flex justify-content-between">
                <a href="#" class="btn btn-sm btn-radius px-2 btn-primary mr-1 upload-csv-btn">Upload CSV</a>
                <%= link_to "Export CSV", export_csv_admin_products_path(:format => :csv), class: 'btn btn-sm btn-radius px-2 btn-primary mr-1' %>
                <%=link_to 'Create New Product', new_admin_product_path, class: 'btn btn-sm btn-radius px-2 btn-primary' %>
            </div>
        </div>
<div class="row">
    <div class="col-lg-12">
      <div class="mt-3" id="total-sellers-per-page">
        <% if Product.count <= 15%>
          <p>Results <span>1 - <%= Product.count %></span> of <span><%= Product.count %></span></p>
        <% else %>
          <p>Results <span>1 - <%= params[:per_page]? params[:per_page] : 15 %></span> of <span><%= Product.count %></span></p>
        <% end %>
      </div>
      <h3 class="mt-4 mb-3">All Products</h3>
        <div class="Yavolo-table mt-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <label class="checkbox-blk">
                                <input type="checkbox" class="mark-bulk-update">
                                <span class="checkmark checkmark-white"></span>
                            </label>
                        </th>
                        <th>Status</th>
                        <th>Image</th>
                        <th>product Name</th>
                        <th>Attribute</th>
                        <th>Uploaded</th>
                        <th>Stock</th>
                        <th>Price</th>
                        <th>30 Day Sales</th>
                        <th>30 Day Revenue</th>
                        <th>Yavolo Enabled</th>
                        <th>Yavolo Discount</th>
                        <th>Assign</th>
                        <th class="text-center">Action</th>

                    </tr>
                </thead>
                <tbody>
                  <% @products.each do |product| %>
                    <tr class="prod-table-row" id="prod-id-<%=product.id%>">
                        <td>
                            <label class="checkbox-blk">
                                <input type="checkbox" name="product_ids[]" class="product_ids" value="<%=product.id%>">
                                <span class="checkmark"></span>
                            </label>
                        </td>
                        <td class="product-status"><%=product.status.to_s.titleize%></td>
                        <td>
                            <div class="">
                                <span class="imglist" width="100%">
                                <% if product.pictures.present?%>
                                  <% if product.pictures.first&.name&.url.present? %>
                                    <%=image_tag product.pictures.first&.name&.url(:thumb) %>
                                  <% end %>
                                  <% else %>
                                    <%= image_tag 'default.jpg'%>
                                <% end %> 
                                </span>
                            </div>
                        </td>
                        <td>
                            <%=product.title%>
                        </td>
                        <td>
                          <p class="mb-0">SKU: <%=product.sku %></p>
                          <p class="mb-0">EAN: <%=product.ean %></p>
                          <p class="mb-0">YAN: <%=product.yan %></p>
                          <p class="mb-0">Brand: <%=product.brand %></p>
                          <p class="mb-0">Condition: <%=product.condition %></p>
                        </td>
                        <td>
                            <%=product.published_at.strftime("%d/%m/%Y") if product.published_at.present?%>
                        </td>
                        <td class="stock-box"><%=product.stock %></td>
                        <td class="price-box"><%=number_to_currency(product.price, unit: 'Â£') %></td>
                        <td>300</td>
                        <td>300</td>
                        <td>
                            <% if product.yavolo_enabled %>
                            <span class="icon-manage-Yavolo font-20px"></span>
                            <% else %>
                            No
                            <% end %>
                        </td>
                        <td class="discount-box"><%= "#{product.discount}" %></td>
                        <td>
                            <div class="d-flex">
                                <span class="icon-star pr-1 font-20px pr-2"></span>
                                <span class="icon-Yavolo-selling-fast-icon pr-2 font-20px"></span>
                                <span class="icon-Yavolo-top-seller-icon  font-20px"></span>
                            </div>
                        </td>
                        <td>
                            <div class="row-actions">
                                <% unless product.yavolo_enabled %>
                                <%= link_to 'Enable Yavolo',"#", class: 'btn btn-sm btn-radius px-4 btn-secondary mb-2 w-100 btn-light-hvr btn-danger enable-yavolo-btn',data: {toggle: 'modal', target: "#customConfirmModal", params: "product[ids][]=#{product.id}" }, id: "pro-enyavolo-btn-#{product.id}" %>
                                <% end %>
                                <%=link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-sm btn-radius px-4 btn-secondary mb-2 w-100' %>
                                <%=link_to 'Duplicate', new_admin_product_path(dup_product_id: product.id), class: 'btn btn-sm btn-radius px-4 btn-secondary w-100' %>
                            </div>
                        </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
        <div class="row">
          <div class="col-md-4 mx-auto">
            <div class="pager-middle text-center d-flex justify-content-center mb-4">
              <div class="text-center"><%= paginate @products %></div>
            </div>
          </div>
        </div>
    </div>
</div>

<%= render 'upload_csv_popup' %>
<%= render 'upload_csv_success_popup' %>
<%= render 'shared/bulk_update_form_modal' %>
<%= render 'shared/simple_confirm_modal', confirm_statement: 'Are you sure to perform this bulk action?', id: 'yes-perform-action',path: '#', data: nil, modal_id: 'seller-products-confirm' %>
