<!DOCTYPE html>
<html>
  <head>
    <title>Admin-Dashboard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@ttskch/select2-bootstrap4-theme@x.x.x/dist/select2-bootstrap4.min.css">
    <%= javascript_pack_tag 'application' %>
  </head>
  <body>
    <div class="dashboard-page">
      <%= render "shared/admin_sidebar" %>
      <div class="rightside">
        <div class="main-page container-fluid <%= !admin_heading(params) ? 'main-page-next' : ' ' %>">
          <div class="admin-dashboard">
            <%= render 'shared/flash_messages' %>
            <%= render "shared/admin_header" %>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= javascript_pack_tag 'tagsinput' %>
  <script>
      $(document).ready(function(){
          if($("#product_keywords").tagsinput('input'))
            $("#product_keywords").tagsinput('input').addClass('ignoreme');
      });
  </script>
</body>
</html>
