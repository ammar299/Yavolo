<!DOCTYPE html>
<html>
  <head>
    <title>Yavolo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <body>
    <div class="main-page">
      <% unless params[:controller] == 'admin/sessions' %>
        <%= render 'layouts/header' %>
      <% end %>
      <div id="flash-msg">
        <% if notice.present? %>
          <p class="flash-toast notice <%= notice.present? ? 'notice-msg' : ''%>">
            <%= notice %>
            <span  class="notice-cross-icon" aria-hidden="true">&times;</span>
          </p>
        <% end %>
        <% if alert.present? %>
          <p class="flash-toast alert <%= alert.present? ? 'alert-msg' : ''%>">
            <%= alert %>
            <span class="notice-cross-icon" aria-hidden="true">&times;</span>
          </p>
        <% end %>
      </div>
      <div class="main-content">
        <%= yield %>
      </div>
      <% unless params[:controller] == 'admin/sessions' %>
        <%= render 'layouts/footer' %>
      <% end %>
    </div>
  </body>
</html>
