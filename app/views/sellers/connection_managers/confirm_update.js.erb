<% if params[:param_to_update].present? && params[:param_to_update] == 'enable' %>
  $('.modal-title').text('Enable Developer')
  <% text = "Enable the following developer: #{get_seller_api_developer_name(params[:seller_api_id])} ?" %>
<% elsif params[:param_to_update].present? && params[:param_to_update] == 'disable' %>
  $('.modal-title').text('Disable Developer')
  <% text = "Disable the following developer: #{get_seller_api_developer_name(params[:seller_api_id])} ?" %>
<% elsif params[:param_to_update].present? && params[:param_to_update] == 'renew' %>
  $('.modal-title').text('Renew Developer')
  <% text = "Renew the following developer: #{get_seller_api_developer_name(params[:seller_api_id])} ?" %>
<% end %>
$("#connection-manager-actions").html("<%= j render(partial: 'sellers/connection_managers/confirmation_buttons', locals: { text: text, seller_api: params[:seller_api_id] } ) %>");
$('#connection-manager-modal-container').addClass("modal-sm");
$('#connection-manager-modal').modal('show');
