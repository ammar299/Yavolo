$("#error-message").text('');
<% unless @seller.errors.count > 0 %>
  $('#add-or-update-logo-btn').text('Add Image');
  $("#seller-logo").html("<%= j render 'shared/sellers/seller_logo', logo: '' %>");
  //$('#edit-seller-form').modal('hide');
  var yavoloSmilyUrl = $('#preview-img-url').val();
  $('.preview-img').attr('src', yavoloSmilyUrl);
  $('.image-name').text('');
  $('.remove-image').text('');
  $(':input[type="submit"]').prop('disabled', true);
  <% if @picture_present %>
    $('#flash-msg').html('<%= j render partial: "shared/notice_banner"%>');
  <% end %>
<% else %>
  $('#error-message').html("<%= @seller.errors.full_messages.join('<br/>').html_safe %>");
<% end %>
