<div class="tab-pane fade" id="Delivery-Settings" role="tabpanel" aria-labelledby="Delivery-Settings-tab">
  <div class="d-flex justify-content-between flex-wrap">
    <div class="dropdown-filter-field active search-field-flex">
      <div class="dropdown">
        <a class="btn btn-radius px-4 btn-primary" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Search All <i class="fa fa-angle-down ml-4" aria-hidden="true"></i>
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="#">Search All</a>
          <a class="dropdown-item" href="#">Delivery Name</a>
        </div>
      </div>
      <%= form_tag(search_delivery_options_sellers_profile_path, method: :get, remote: true) do %>
      <div class="search-field mb-0">
        <input type="text" name="search" placeholder="Search Delivery Templates">
        <i class="fa fa-search accounts-delivery-search" aria-hidden="true"></i>
      </div>
      <% end %>
    </div>
    <div>
      <%= link_to 'Create New Template', new_sellers_delivery_option_path, class: 'btn btn-radius px-4 btn-primary ml-5 mb-3', data: { remote: true } %>
    </div>
  </div>
  <h5 class="mb-3">Delivery Options</h5>
  <div id="setting-delivery-options">
    <%= render 'sellers/delivery_options/setting_delivery_options', delivery_options: @delivery_options %>
  </div>
</div>

<div class="modal fade" id="deliveryTemplateForm" tabindex="-1" role="dialog" aria-labelledby="deliveryOptionFormLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body px-lg-5">
        <div id="delivery-template-form"></div>
      </div>
    </div>
  </div>
</div>
</div>

