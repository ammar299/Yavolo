<div class="tab-pane fade" id="Delivery-Settings" role="tabpanel" aria-labelledby="Delivery-Settings-tab">
  <div class="d-flex justify-content-between flex-wrap">
    <div class="dropdown-filter-field active my-1 dropdown-filter-custom">
      <div class="dropdown">
        <a class="btn btn-radius px-2 btn-primary current-search-filter" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Search All <i class="fa fa-angle-down ml-2" aria-hidden="true"></i>
        </a>
        <div class="dropdown-menu admin-orders-filters" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item <%= set_filter_active('Search All') %>" href="#">Search All<i aria-hidden="true"></i></a>
            <a class="dropdown-item <%= set_filter_active('Product Title A-Z') %>" href="#">Delivery Name<i aria-hidden="true"></i></a>
        </div>
      </div>
      <%= form_tag(search_delivery_options_sellers_profile_path, method: :get, remote: true, class:"search-delivery-options-form flex-1") do %>
        <div class="search-field mb-0">
          <input type="text" name="search" placeholder="Search Delivery Templates" class="search-input delivery-template-search-field">
            <%= link_to search_delivery_options_sellers_profile_path, method: :get, remote: true, class: 'cross-icon',style:'display:none;' do %>
              <i class="icon-cross mm-text pt-1" aria-hidden="true"></i>
            <% end %>
            <i class="fa fa-search search-icon" aria-hidden="true"></i>
        </div>
      <% end %>
    </div>
    <div>
      <%= link_to 'Create New Template', new_sellers_delivery_option_path, class: 'btn btn-sm btn-radius px-4 btn-primary ml-5 mb-3', data: { remote: true } %>
    </div>
  </div>
  <h5 class="mb-3">Delivery Templates</h5>
  <div id="setting-delivery-options">
    <% if @delivery_options.count > 0 %>
      <%= render 'sellers/delivery_options/setting_delivery_options', delivery_options: @delivery_options %>
    <% else %>
      <p class="text-center">No Records Found.</p>
    <% end %>
  </div>
</div>
<div class="modal fade align-items-start" id="deliveryTemplateForm" tabindex="-1" role="dialog" aria-labelledby="deliveryOptionFormLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body px-lg-3">
        <div id="delivery-template-form"></div>
      </div>
    </div>
  </div>
</div>
<!-- Delivery Template Confirmation Deletion Modal -->
