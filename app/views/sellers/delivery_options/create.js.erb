<% if params[:from] == 'create_product' %>
$('.delivery-details-section').append("<%= j render(partial: 'single_delivery_option_item', locals: { delivery_option: @delivery_option }) %>")
$('#delivery-template-form').hide();
$('#delivery-template-form').html("");
$("#add_new").prop("checked", false);
<% end %>

<% if !params[:from].present? %>
$("#deliveryTemplateForm").modal('hide');
$('#delivery-options-list').html("<%= j render(partial: 'delivery_options_list', locals: { delivery_options: @delivery_options }) %>");
$('div[id=setting-delivery-option]').remove();
$('#setting-delivery-options').html("<%= j render(partial: 'setting_delivery_options', locals: { delivery_options: @delivery_options }) %>");
<% if notice.present? %>
  $('#flash-msg').html('<%= j render partial: "shared/notice_banner" %>');
<% end %>
<% end %>
