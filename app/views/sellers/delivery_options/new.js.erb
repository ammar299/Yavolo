$('#delivery-template-form').html("<%= j render(partial: 'shared/admin/delivery_option_form', locals: { delivery_option: @delivery_option, url: sellers_delivery_options_path }) %>");
$('#deliveryTemplateForm').find('h5').text('Add New Template');
<% if params[:add_new].blank? && params[:from].blank? %>
  $('#deliveryTemplateForm').modal('show');
  // TODO: removed jquery plugin right now using custom validation for this form
  // setFormValidation();
  <% if notice.present? %>
    $('#flash-msg').html('<%= j render partial: "shared/notice_banner" %>');
  <% end %>
<% end %>
<% if params[:add_new].present? %>
$('#delivery-template-form #delivery_option_form').append("<input type='hidden' name='from' value='create_product'>")
$('#delivery-template-form').show();
<% elsif params[:from].present? %>
$('#delivery-template-form').hide();
$('#delivery-template-form').html("");
<% end %>
