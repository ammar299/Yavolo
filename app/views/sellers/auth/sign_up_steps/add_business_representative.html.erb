<div class="container">
  <div class="row">
    <div class="col col-12 col-lg-6 col-md-8 mx-auto">
      <div class="sign-in">
        <h3 class="text-center mb-5" style="color: #640529;">Register you business with Yavolo
        </h3>
        <h5 class="text-center mb-5" style="color: #640529;font-size: 18px; margin-top: -36px;">Add Business Representative Details</h5>
        <%= form_for @seller, url: wizard_path, method: :put do |form| %>
          <% if @seller.errors.any? %>
            <div class="error_messages">
              <h2><%= pluralize(@seller.errors.count, "error") %> prohibited this user from being saved:</h2>
              <ul>
                <% @seller.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= form.fields_for :business_representative, @seller.build_business_representative do |br| %>
            <div class="form-group general-mrgn">
              <%= br.label :full_legal_name, 'Full Legal Name*' %>
              <%= br.text_field :full_legal_name, autofocus: true, autocomplete: "full_legal_name", class: "form-control", id: "", placeholder: "Full Legal Name" , required: true %>
            </div>
            <div class="form-group general-mrgn">
              <%= br.label :email, 'Email*' %>
              <%= br.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "", placeholder: "Business Representative Email", required: true %>
            </div>
            <div class="form-group general-mrgn">
              <%= br.label :full_legal_name, 'Full Legal Name*' %>
              <%= br.text_field :full_legal_name, autofocus: true, autocomplete: "full_legal_name", class: "form-control", id: "", placeholder: "Full Legal Name", required: true %>
            </div>
            <div class="form-group general-mrgn">
              <%= br.label :job_title, 'Job Title*' %>
              <%= br.text_field :job_title, autofocus: true, autocomplete: "job_title", class: "form-control", id: "", placeholder: "Job Title", required: true %>
            </div>
            <div class="form-group general-mrgn">
              <%= br.label :date_of_birth, 'Date of Birth*' %>
              <%= br.date_field :date_of_birth, autofocus: true, autocomplete: "date_of_birth", class: "form-control", id: "", placeholder: "Date of Birth", required: true %>
            </div>
            <%= br.submit "Continue", class: 'btn btn-primary btn-lg btn-block mb-4' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
