<div class="container">
  <div class="row">
    <div class="col col-12 col-lg-6 col-md-8 mx-auto">
      <div class="sign-in">
        <h3 class="text-center mb-4" style="color: #640529; font-size: 48px">
          Forgot your password
        </h3>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "sellers/auth/shared/error_messages", resource: resource %>
              <div class="form-group general-mrgn">
                <label for="exampleInputEmail1">Email Address *</label>
                <%= f.email_field :email, autofocus: true, class: "form-control" ,id:
                "exampleInputEmail1",placeholder: "Email Address" %>
              </div>

            <div class="actions">
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg btn-block
        general-mrgn"  %>
            </div>
          <% end %>
          <%= render "sellers/auth/shared/links" %>
      </div>
    </div>
  </div>
</div>
